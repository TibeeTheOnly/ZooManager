<Window x:Class="ZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoo Habitat Manager - Login" Height="300" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF2C3E50" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Zoo Habitat Manager"
               FontSize="24"
               FontWeight="Bold"
               Foreground="White"
               HorizontalAlignment="Center"
               Margin="0,20,0,20"
               Grid.Row="0" />

        <!-- Username -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Username"
                   Foreground="White"
                   FontWeight="Bold" />
            <TextBox x:Name="UsernameTextBox"
                 Height="30"
                 Margin="0,5,0,0"
                 Padding="5"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,10" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Password"
                   Foreground="White"
                   FontWeight="Bold" />
            <PasswordBox x:Name="PasswordBox"
                     Height="30"
                     Margin="0,5,0,0"
                     Padding="5" />
        </StackPanel>

        <!-- Login Button -->
        <Button Content="Login"
            Height="35"
            Width="250"
            Background="#FF3498DB"
            Foreground="White"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,0,0,10"
            Click="LoginButton_Click"
            Grid.Row="3" />

        <!-- Error Message -->
        <TextBlock x:Name="ErrorMessageTextBlock"
               Foreground="Red"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,10,0,0"
               Grid.Row="4" />
    </Grid>

</Window>
